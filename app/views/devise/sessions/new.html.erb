<div class="row devise-box">
  <div class="col-md-4 col-md-offset-4">
    <h2>登录</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: '登录邮箱' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder: '密码' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "记住我" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "登录", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

